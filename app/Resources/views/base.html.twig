{# app/Resources/views/base.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <!-- maximum-scale=1.0 is now deprecated -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="GaÃ«tan Role">
    <meta name="description" content="Flyaround is a flight sharing website linking specific users and pilots.">
    <meta name="keywords" content="Flyaround, flightshare, website">
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->

    <title>FlyAround - {% block title %}{% endblock %}</title>

    <!-- CSS Webpack Vendor including Bootstrap and so on -->
    <link rel="stylesheet" href="{{ asset('build/vendor.css') }}">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/style.css') }}">
    {% endblock %}

    <!-- Favicons -->
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
</head>
<body>
<header>
    {% block header %}
    {% endblock %}
</header>
{% block body %}
{% endblock %}
<footer>
    {% block footer %}
    {% endblock %}
</footer>
<!-- JS Webpack's vendor including Bootstrap.js and JQuery.js shared entry -->
<script src="{{ asset('build/manifest.js') }}"></script>
<script src="{{ asset('build/vendor.js') }}"></script>
{% block javascripts %}
{% endblock %}
</body>
</html>
{# app/Resources/default/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block header %}
    <!-- Simple Bootstrap's navbar to test JS and CSS webpack entries -->
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">FlyAround Brand</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">Tab Active <span class="sr-only">(current)</span></a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Action</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Separated link</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">One more separated link</a></li>
                        </ul>
                    </li>
                </ul>
                <form class="navbar-form navbar-left">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Tab two</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Action</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Separated link</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
{% endblock %}

{% block body %}
    <!-- PASSED W3C VALIDATOR https://validator.w3.org/ -->
    <!-- Zero intern console warning -->

    <!-- All listed routes from Symfony quests -->
    <div id="wrapper">
        <div id="container">
            <div class="row">
                <h1>Routes disponibles :</h1>
                <ul>
                    <li>
                        <a href="{{ path('planemodel_index') }}">Voir les avions</a>
                    </li>
                    <li>
                        <a href="{{ path('reservation_index') }}">Voir les réservations</a>
                    </li>
                    <li>
                        <a href="{{ path('flight_index') }}">Voir les vols</a>
                    </li>
                    <li>
                        <a href="{{ path('site_index') }}">Voir les terrains</a>
                    </li>
                    <li>
                        <a href="{{ path('review_index') }}">Voir tous les avis utilisateurs</a>
                    </li>
                </ul>
                <ul>
                    {% if is_granted('ROLE_USER') %}
                        <li>
                            <a href="{{ path('fos_user_security_logout') }}">Se déconnecter</a>
                        </li>
                    {% elseif is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
                        <li>
                            <a href="{{ path('fos_user_security_login') }}">Se connecter</a>
                        </li>
                        <li>
                            <a href="{{ path('fos_user_registration_register') }}">Créer un compte</a>
                        </li>
                    {% endif %}
                </ul>
                <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="left" title="Pensez à bien créer un compte et d'avoir une session avant d'accéder aux routes">
                    Tooltips !
                </button>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/main.js') }}"></script>
{% endblock %}